<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6">

    <androidx.cardview.widget.CardView
            android:id="@+id/filterToolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

        <include layout="@layout/toolbar_help"/>

    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkBoxRecycler"
            android:layout_below="@id/filterToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"/>





    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/checkBoxApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/green"
            android:textSize="15sp"
            android:text="APPLY"
            android:gravity="center"
            android:padding="12dp"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>