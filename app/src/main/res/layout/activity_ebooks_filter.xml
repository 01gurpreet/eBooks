<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/filterContainer"
        android:background="#f6f6f6">

    <androidx.cardview.widget.CardView
            android:id="@+id/filterToolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

        <include layout="@layout/toolbar_help"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:id="@+id/containerEBooksFillter"
            android:layout_below="@id/filterToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                app:cardBackgroundColor="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.7dp"
                        android:layout_marginLeft="11.7dp"
                        android:textColor="@color/txt_color"
                        android:textSize="11.7sp"
                        android:text="SORT BY"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_rect"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                    <Spinner
                            android:id="@+id/spinnerSort"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/custom_spinner"
                            android:spinnerMode="dropdown"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                app:cardBackgroundColor="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.7dp"
                        android:layout_marginLeft="11.7dp"
                        android:textColor="@color/txt_color"
                        android:textSize="11.7sp"
                        android:text="BOOKS RATINGS"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="2dp"
                            android:orientation="horizontal">


                        <LinearLayout
                                android:id="@+id/linear1"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="7.5dp"
                                android:background="@drawable/spinner_rect">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/star1"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/ic_star_gray"/>


                                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/one"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textColor="#8f948d"/>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/linear2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="7.5dp"
                                android:layout_marginRight="7.5dp"
                                android:background="@drawable/spinner_rect">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/star2"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/ic_star_gray"/>


                                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/two"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textColor="#8f948d"/>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/linear3"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="7.5dp"
                                android:layout_marginRight="7.5dp"
                                android:background="@drawable/spinner_rect">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/star3"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/ic_star_gray"/>


                                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/three"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textColor="#8f948d"/>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/linear4"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="7.5dp"
                                android:layout_marginRight="7.5dp"
                                android:background="@drawable/spinner_rect">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/star4"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/ic_star_gray"/>


                                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/four"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textColor="#8f948d"/>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/linear5"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginLeft="7.5dp"
                                android:layout_marginRight="7.5dp"
                                android:background="@drawable/spinner_rect">


                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/star5"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/ic_star_gray"/>


                                <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                                        android:id="@+id/five"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="15sp"
                                        android:textColor="#8f948d"/>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/authorsFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                app:cardBackgroundColor="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Authors"
                            android:textColor="@color/txt_color"
                            android:textSize="15sp"/>

                    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/authorsSubText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malcolm gladwell, Jojo Moyes +5 more"
                            android:textSize="12.3sp"
                            android:letterSpacing="0.0165"
                            android:textColor="#6b6d6c"/>

                </LinearLayout>

                <ImageView
                        android:layout_width="8.5dp"
                        android:layout_height="14.3dp"
                        app:srcCompat="@drawable/ic_next"
                        android:layout_gravity="center"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/languagesFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                app:cardBackgroundColor="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Languages"
                            android:textColor="@color/txt_color"
                            android:textSize="15sp"/>

                    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/langSubText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English, Italiano, Deutsch +12 more"
                            android:textSize="12.3sp"
                            android:letterSpacing="0.0165"
                            android:textColor="#6b6d6c"/>

                </LinearLayout>

                <ImageView
                        android:layout_width="8.5dp"
                        android:layout_height="14.3dp"
                        app:srcCompat="@drawable/ic_next"
                        android:layout_gravity="center"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <com.kinfoitsolutions.e_booksnew.customfonts.MyTextView_Roboto_Medium

            android:id="@+id/applyFilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/green"
            android:textSize="15sp"
            android:text="APPLY"
            android:gravity="center"
            android:padding="12dp"
            android:layout_alignParentBottom="true"/>



</RelativeLayout>
